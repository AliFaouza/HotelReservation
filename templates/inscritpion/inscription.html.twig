{% extends 'base.html.twig' %}

{% block title %} Information_personnel {% endblock %}

{% block stylesheets %}
{{ parent()}}
{% endblock %}

{% block body %}
  {{ parent() }}
  <div class="row g-3">
    <div class="offset-1 col-10">
    <form   class="m-3">
       <fieldset class="border border-5 rounded p-2 border-success ">
           <div class="d-flex justify-content-between">
      <div class="col-md-5">
          <label class="form-label">Nom</label>
          <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" required>
        </div>
    
        <div class="col-md-5 ">
          <label class="form-label">Prenom</label>
          <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" required>
        </div>
      </div>
      <div class="d-flex justify-content-between">
      <div class="col-md-5">
        <label for="inputEmail4" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail4" required>
      </div>
  
      <div class="col-md-5">
        <label for="inputPassword4" class="form-label">Password</label>
        <input type="password" class="form-control" id="inputPassword4" required>
      </div>
      </div>
      <div class="col-12">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck">
          <label class="form-check-label" for="gridCheck">
            Check me out
          </label>
        </div>
      </div>
  
      <div class="col-12 text-end m-1 ">
        <button type="submit" class="btn btn-success ">S'inscrire</button>
      </div>
  
    </form>
  </fieldset>
  </div>
  </div>
  
  <div class="card-group border border-raduis p-3">
    <div class="card m-3 mb-5">
      <img class="card-img-top" src="{{ asset('photos/350x250.jpg') }}" alt="Card image cap">
    </div>
    
    <div class="card m-3 mb-5">
      <img class="card-img-top" src="{{ asset('photos/350x250.jpg') }}" alt="Card image cap">
    </div>
  
    <div class="card m-3 mb-5">
      <img class="card-img" src="{{ asset('photos/350x250.jpg') }}" alt="Card image">
    </div>
  </div>
{% endblock %}

